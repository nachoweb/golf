html(lang='en', ng-app='golfModule')

    head
        meta(charset='utf-8')
        title Golf App
        link(rel='stylesheet', href='css/app.css')
        link(rel='stylesheet', href='css/bootstrap.css')
        script(type='text/javascript').
            GolfApp={};
            GolfApp.username= "#{username}";
        script(src='lib/angular/angular.js')
        script(src='lib/angular/angular-resource.min.js')
        script(src='js/controllers.js')
        script(src='js/routes.js')
        script(src='js/services.js')
        //script(src='js/filters.js')
        //script(src='js/directives.js')
    body#cuerpo(ng-controller='MainControl')
        div(style="border-bottom: 2px solid rgb(86, 130, 177);margin-bottom: 10px;")
            a(href="/"): img(src="img/home.png",style="position:absolute;width:35px;top: 3px; left: 20px;")
            h3(id='tituloApp')  Aplicación web para golfistas profesionales
            .pull-right#usuarioLogueado
                span {{ username }}
                a(ng-href="/logout")
                    i.icon-off
                    |Cerrar sesión
        .row-fluid(ng-view='ng-view')
